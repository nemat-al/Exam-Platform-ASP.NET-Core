
@{
    ViewData["Title"] = "_ResetPasswordConfirmation";
}

<div class="modal" id="resetPassModal" tabindex="=-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">
                    &times;
                </button>
                <h4 class="modal-title">Done Successfuly!</h4>
            </div>
            <div class="modal-body">
                <p>Your Password was reset successfully, press OK to log in.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default pull-left" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary"><a asp-action="Login" style="color:white">OK</a></button>
            </div>
        </div>
    </div>
</div>

