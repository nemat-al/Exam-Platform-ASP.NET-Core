@model GroupC.Uni.Web.ViewModels.TopicViewModels
@{
    ViewData["Title"] = "_TopicCreation";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h2>Create a Topic</h2>
    </div>
    <form asp-controller="CourseController" asp-action="TopicCreate" id="TopicForm">
        <div class="panel-body">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseId" class="control-label"></label>
                <input asp-for="CourseId" class="form-control" value="@ViewBag.CourseId" />
            </div>
        </div>
        <div class="panel-footer">
            <div class="form-group">
                <input type="submit" value="Create" id="CreateTopic" class="btn btn btn-primary" />
                <input type="button" value="Add Question" id="AddQuestion" class="btn btn-primary" style="visibility:hidden" />
            </div>
        </div>
    </form>

</div>

