@model GroupC.Uni.Web.ViewModels.CourseModelView


<style>

    col-lg-6 h2 {
        font-size: 48px;
        color: #40424a;
        font-family: 'Josefin Sans', sans-serif;
    }

    .hero-info ul li span {
        color: #40424a;
        display: inline-block;
        min-width: 220px;
    }

    .hero-info ul li {
        font-size: 18px;
        color: #808181;
    }

    img {
        width: 100px;
        height: 100px;
        margin-top: 100px;
    }
</style>

  
{ }
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-xl-10 offset-xl-1">
                    <div class="row">
                        <div class="col-sm-3"> </div>
                        <div class="col-sm-6 box-body with-border" style="background-color:white; border-top: 3px solid #d2d6de;">
                            <div class="col-sm-7">
                                <div style="border-bottom: 1px solid #d2d6de;">
                                    <h3>@Model.Name Course</h3>

                                </div>
                                <div class="hero-info">
                                    <h3>Details</h3>
                                    <ul>
                                        <li><span>Course Code</span>@Model.Code</li>
                                        @if (@Model.Topics.Count() > 0)
                                        {
                                            <li><span>Number of Topics</span>@Model.Topics.Count()</li>
                                            <li> <span>Topics:</span></li>

                                            foreach (var topic in Model.Topics)
                                            {

                                                <li style="list-style-type: none;"><span style="text-align:center;">@topic.TopicName</span></li>
                                            }
                                        }
                                        else
                                        {
                                            <li><span style="margin-right:30px">There is no Topics in this Course</span><a class="btn btn-default" s asp-action="Edit" asp-route-id="@Model.Id">Add Topics</a> </li>
                                        }

                                    </ul>
                                    <hr style="border-top: 1px solid #d2d6de;" />
                                    <div class="form-group center-block">
                                        <a class="btn btn-github" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                        <a class="btn btn-danger delete"
                                           data-id="@Model.Id"
                                           data-controller="Courses"
                                           data-action="Delete"
                                           data-body-message="Are you sure you want to delete this Course?">
                                            delete
                                        </a>
                                        <div class="clearfix"></div>

                                    </div>

                                </div>
                            </div>

                            <div class="col-sm-5">
                                <figure class="hero-image">
                                    <img src="@Model.ImageURL" alt="5">
                                </figure>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </section>