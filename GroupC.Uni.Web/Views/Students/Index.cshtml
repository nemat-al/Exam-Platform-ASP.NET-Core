@model IEnumerable<GroupC.Uni.Web.ViewModels.CreateUserViewModel>

<style>
    #ImageDisplay {
        width: 50px;
    }
</style>
<section class="content">
    <br />
    <div class="box" style="padding: 20px">
        <div class="box-header">
            <h2 class="box-title">Students</h2>
        </div>


        <p>
            <a asp-action="Create" class="btn btn-sm btn-bitbucket pull-right" style="margin-right:10px ;margin-bottom:20px">Create New Student</a>
            <br />
        </p>



        <table class="table" id="StudentsTable">
            <thead>
                <tr>
                    @*<th>
                            @Html.DisplayNameFor(model => model.Id)
                        </th>*@
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Phone)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserType)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Year)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Image)
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var item in Model)
                {
                    <tr>
                        @*<td>
                                @Html.DisplayFor(modelItem => item.Id)
                            </td>*@
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Phone)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserType)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Year)
                        </td>
                        <td align="center">
                            <img id="ImageDisplay" src="@item.ImageURL" />
                        </td>
                        <td>
                            <a class="btn btn-sm btn-info" asp-action="Edit" asp-route-id="@item.Id">Update</a>
                            @*<a class="btn btn-sm btn-primary" asp-action="Details" asp-route-id="@item.Id">Details</a>*@
                            <a class="btn btn-sm btn-danger delete"
                               data-id="@item.Id"
                               data-controller="Students"
                               data-action="Delete"
                               data-body-message="Are you sure you want to remove this Student?">
                                @*<span class="glyphicon glyphicon-trash" style="color:#ff0000"></span>*@
                                delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</section>
<script>
$('#StudentsTable').DataTable(
                {
                    "order": [[3, "desc"]]
                }
            );

</script>