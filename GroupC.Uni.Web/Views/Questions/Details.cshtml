@model GroupC.Uni.Web.ViewModels.QuestionViewModel

<style>

    col-lg-6 h2 {
        font-size: 48px;
        color: #40424a;
        font-family: 'Josefin Sans', sans-serif;
    }

    .hero-info ul li span {
        color: #40424a;
        display: inline-block;
        min-width: 220px;
    }

    .hero-info ul li {
        font-size: 18px;
        color: #808181;
    }
</style>


<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-10 offset-xl-1">
                <div class="row">
                    <div class="col-sm-3"> </div>
                    <div class="col-sm-6 box-body with-border" style="background-color:white; border-top: 3px solid #d2d6de;">
                        <div class="col-sm-7">
                            <div style="border-bottom: 1px solid #d2d6de;">
                                <h2>Question details</h2>

                            </div>
                            <div class="hero-info">
                                <h2>Details</h2>
                                <ul>
                                    <li><span>Question </span><textarea style="box-sizing: border-box; width: 100%;"> @Model.Text</textarea> </li>
                                    <li><span>Mark </span>@Model.Mark </li>
                                    <li><span>Topic </span>@Model.Topic.Name </li>
                                    @if (@Model.Choices.Count() > 0)
                                    {
                                        <li><span>Number of Choices</span>@Model.Choices.Count()</li>
                                        <li> <span>Choices:</span></li>

                                        foreach (var choice in Model.Choices)
                                        {
                                            if (choice.Type == true)
                                            {
                                                <li style="list-style-type: none;"><span>Correct answer</span>@choice.Text</li>}
                                            else
                                            {
                                                <li style="list-style-type: none;"><span></span>@choice.Text</li>}
                                        }
                                    }
                                    else
                                    {
                                        <li><span style="margin-right:30px">There is no Choices for this question</span><a class="btn btn-default" s asp-action="Edit" asp-route-id="@Model.Id">Add Choices</a> </li>
                                    }

                                </ul>
                                <hr style="border-top: 1px solid #d2d6de;" />
                                <div class="form-group center-block">
                                    <a class="btn btn-github" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                                    <a class="btn btn-danger delete"
                                       data-id="@Model.Id"
                                       data-controller="Courses"
                                       data-action="Delete"
                                       data-body-message="Are you sure you want to delete this question?">
                                        delete
                                    </a>
                                    <div class="clearfix"></div>

                                </div>

                            </div>
                        </div>


                    </div>

                </div>
            </div>
        </div>
    </div>
</section>