@model GroupC.Uni.Core.Entities.Exam
<div class="blog">
    <div class="row">
        <div class="col-xs-1"></div>
        <div class="col-xs-10">
            <div class="panel-group">
                <div class="panel panel-default">
                    <div class="panel-heading align-content-center" style="margin-bottom:20px;">
                        <div class="panel-title text-center panel-relative" style="height:unset">
                            <h2> @Html.DisplayFor(model => model.Course.Name) Exam</h2>
                        </div>
                        <div>
                            <ul>
                                <li> Duration:   @Html.DisplayFor(model => model.DurationInMinutes)</li>
                                <li>Questions Count: @Html.DisplayFor(model => model.QuestionsCount)</li>
                                <li>Test Center: @Html.DisplayFor(model => model.TestCenter.Name)</li>
                            </ul>
                        </div>
                    </div>
                    @{
                        @foreach (var item in Model.ExamQuestions)
                        {
                    <div class="panel-group">
                        @{int j = 0;}
                        <div class="row">
                            <div class="col-xs-2"></div>
                            <div class="col-xs-8">
                                <div class="panel-group">
                                    <div class="panel panel-info">
                                        <div class="panel-heading">
                                            <h4 class="panel-title">
                                                @item.Question.Text
                                            </h4>

                                        </div>
                                        <div class="panel-body">
                                            <div class="form-group">
                                                @{int i = 0;}
                                                @foreach (var choice in item.Question.Choices)
                                                {

                                                    string _value = "ch" + j + i;
                                                    <div class="checkbox ion-android-checkbox-outline">
                                                        <input data-val="true" id=@_value name=@_value type="checkbox" value="true" />
                                                        <label for=@_value>
                                                            @choice.Text
                                                        </label>
                                                        @{i = i + 1;}
                                                    </div>
                                                }
                                                @{j = j + 1;}
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                        }
                        }
                        <div class="panel-footer">
                            <button type="submit" class="btn btn-info">Submit</button>
                        </div>
                    </div>
            </div>

        </div>
    </div>
</div>

